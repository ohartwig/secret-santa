{% extends "template.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Secret Santa</h3>
                </div>
                <div class="panel-body">
                    Cette application permet à l'Entrefrof de créer facilement des Secret Santa.
                </div>
            </div>
        </div>
    </div>
    {% if app.session.get("connected") %}
        <form class="form-inline" method="post" action="{{ path('join_instance') }}">
            <div class="form-group">
                <label for="instance_hash"></label>
                <input type="text"  name="instance_hash" id="instance_hash" class="form-control"
                       placeholder="Code de l'instance">
            </div>
            <button type="submit" class="btn btn-default">Rejoindre l'instance</button>
        </form>
    {% endif %}
{% endblock %}
{% extends "template.html.twig" %}

{% block content %}
    <form class="form-horizontal">
        <div class="form-group">
            <label for="user_firstname" class="col-sm-2 control-label">Prénom</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="user_firstname" id="user_firstname" placeholder="Prénom" value="{{ user.userFirstname }}">
            </div>
        </div>
        <div class="form-group">
            <label for="user_lastname" class="col-sm-2 control-label">Nom</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="user_lastname" id="user_lastname" placeholder="Nom" value="{{ user.userLastname }}">
            </div>
        </div>
        <div class="form-group">
            <label for="user_email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="user_email" id="user_email" placeholder="Email" value="{{ user.userEmail }}">
            </div>
        </div>
        <div class="form-group">
            <label for="user_password" class="col-sm-2 control-label">Nouveau mot de passe</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="user_password" id="user_password" placeholder="Nouveau mot de passe">
            </div>
        </div>
        <div class="form-group">
            <label for="user_password_verification" class="col-sm-2 control-label">Vérification mot de passe</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="user_password_verification" id="user_password_verification" placeholder="Vérification mot de passe">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
                <button type="reset" class="btn btn-default">Effacer</button>
            </div>
        </div>
    </form>
{% endblock %}